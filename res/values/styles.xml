<resources>
    <style name="Theme.Light.CustomOverscroll" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorEdgeEffect">@color/folder_edge_effect_color</item>
    </style>

    <style name="Theme.Dark.CustomOverscroll" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorEdgeEffect">@color/workspace_edge_effect_color</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/workspace_icon_text_color</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowColor">#B0000000</item>
    </style>

    <style name="Icon.AllApps">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/quantum_panel_text_color</item>
        <item name="android:drawablePadding">@dimen/dynamic_grid_icon_drawable_padding</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="customShadows">false</item>
    </style>

    <style name="Icon.Folder">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/quantum_panel_text_color</item>
        <item name="android:shadowRadius">0</item>
        <item name="customShadows">false</item>
    </style>

    <!--add by liuning for multi apps move on 2017/7/18 start-->
    <style name="Icon.Move">
        <item name="android:background">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="customShadows">false</item>
        <item name="iconDisplay">move_container</item>
    </style>
    <!--add by liuning for multi apps move on 2017/7/18 end-->

    <style name="SearchButton"></style>

    <style name="DropTargetButtonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!--modify by liuning for gome dropTargetButton style on 2017/7/18 start-->
    <style name="DropTargetButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:layout_gravity">center</item>-->
        <item name="android:gravity">center_horizontal</item>
       <!-- <item name="android:drawablePadding">7.5dp</item>-->
        <item name="android:paddingLeft">44dp</item>
        <item name="android:paddingRight">44dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/drop_target_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>
    <!--modify by liuning for gome dropTargetButton style on 2017/7/18 end-->

    <style name="DropTargetButton" parent="DropTargetButtonBase" />

    <style name="PreloadIcon">
        <item name="background">@drawable/virtual_preload</item>
        <item name="indicatorSize">4dp</item>
        <item name="ringOutset">4dp</item>
    </style>

    <style name="PreloadIcon.Folder">
        <item name="background">@drawable/virtual_preload_folder</item>
        <item name="indicatorSize">4dp</item>
        <item name="ringOutset">4dp</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.Material.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
        <item name="android:windowBackground">@color/page_bg_color</item>
    </style>

    <!-- Add by gaoquan 2017.6.1 -->
    <!-- start -->
    <!-- unread -->
    <style name="Theme.WallpaperMain" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@color/status_bar_color</item>
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
        <item name="android:windowBackground">@color/page_bg_color</item>
        <item name="android:navigationBarDividerColor">#26000000</item>
        <item name="android:navigationBarColor">#F2F3F4</item>
    </style>
    <style name="Title_TextView_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/setting_item_title_textview_padding_left</item>
        <item name="android:paddingRight">@dimen/setting_item_title_textview_padding_right</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:minWidth">100dp</item>
    </style>
    <style name="Title_Summary_TextView_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/setting_item_title_textview_padding_top</item>
        <item name="android:paddingLeft">@dimen/setting_item_title_textview_padding_left</item>
        <item name="android:paddingRight">@dimen/setting_item_title_textview_padding_right</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">10</item>
        <item name="android:textColor">@color/item_summary_text_color</item>
        <item name="android:textSize">@dimen/summary_text_size</item>
        <item name="android:minWidth">100dp</item>
    </style>
    <style name="TopDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/top_divider_color</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="ViewDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>
    <!-- end -->

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <!--<item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/wallpaper_open_enter</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/wallpaper_open_exit</item>-->

        <item name="android:wallpaperOpenEnterAnimation">@anim/wallpaper_open_enter</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/wallpaper_open_exit</item>

        <!--<item name="android:wallpaperCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:wallpaperCloseExitAnimation">@anim/activity_close_exit</item>-->
    </style>

    <style name="windowAnimation" parent="@android:style/Animation">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>
    <style name="SearchWindowAnimation" parent="@android:style/Animation">
        <item name="android:windowAnimationStyle">@style/SearchActivityAnimation</item>
    </style>
    <style name="SearchActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:taskCloseEnterAnimation">@anim/wallpaper_open_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/wallpaper_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/wallpaper_open_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/wallpaper_open_exit</item>
    </style>

     <!-- Add by linhai 2017.7.18 for effect checkbox start-->
    <style name="effects_checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
            <item name="android:button">@drawable/effects_checkbox_style</item>
    </style>
    <!-- Add by linhai 2017.7.18 for effect checkbox end-->
</resources>

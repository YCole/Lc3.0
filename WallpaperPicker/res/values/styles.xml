<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.WallpaperCropper" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/WallpaperCropperActionBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.WallpaperPicker" parent="@android:style/Theme.WithActionBar">
        <item name="android:colorControlActivated">#2775D7</item>
        <item name="android:actionBarStyle">@style/WallpaperCropperActionBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="WallpaperCropperActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">#88000000</item>
    </style>

    <style name="BaseWallpaperTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--added by jubingcheng for fix enter & exit app animation start on 2017/7/28-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <!--added by jubingcheng for fix enter & exit app animation end on 2017/7/28-->
    </style>

    <style name="Theme" parent="@style/BaseWallpaperTheme"></style>

    <style name="ActionBarSetWallpaperStyle" parent="@android:style/Widget.DeviceDefault.ActionButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
    </style>

</resources>
